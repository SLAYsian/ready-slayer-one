<div class="row mb-4 modal">
  <div>
  <h2 class="text-center">Create Character</h2>

  <form id="character-form">
    <label for="genre-select">Genre:</label>
    <select name="genre" id="genre-select">
      <option value="Fantasy">Fantasy</option>
      <option value="Sci-Fi">Sci-Fi</option>
    </select>

    <label for="character-name">Character Name:</label>
    <input type="text" name="name" id="character-name" required>

    <label for="class-select">Class:</label>
    <select name="class" id="class-select">
      <option value="wizard">Wizard/Scientist</option>
      <option value="warrior">Warrior/Soldier</option>
      <option value="rogue">Rogue/Engineer</option>
    </select>

    <button type="submit">Next</button>
  </form>
</div>
  </div>
<script src="./js/create.js"></script>