<body>
  <div class="flex-column justify-space-around content">
    <header class="display-flex justify-space-around align-center p-2">
      <h1 class="logo">
        <a href="/">Ready-<span id="slay">Slay</span>er-One</a>
      </h1>
      <nav class="nav">
        {{#if logged_in}}
        {{!-- TODO: How to get user name where profile is --}}
        <a href="/profile" class="nav-link">Profile</a>
          <img
          class="mx-1"
          src="/img/user.svg"
          height="30"
          alt="user-icon"> |
        <button class="btn-styled" id="logout">Log Out</a></button>
        {{else}}
        <a href="/login" class="nav-link">Log In</a>
          <img
          class="mx-1"
          src="/img/user.svg"
          height="30"
          alt="user-icon">
        {{/if}}
      </nav>
    </header>
    <main class="main container container-fluid mt-5">
      {{{ body }}}
    </main>
  </div>

  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
